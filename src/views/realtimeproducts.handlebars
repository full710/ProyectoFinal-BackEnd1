<header class="text-center my-5">
    <h1 class="display-4 text-primary">RealTimeProducts</h1>
    <p class="text-muted">Productos actualizados en tiempo real</p>
</header>

<div id="contenedorProductos" class="container d-flex flex-wrap justify-content-start">
   
</div>

<section class="container mt-5">
    <h3 class="text-center mb-4">Formulario para agregar productos</h3>
    <form id="formAgregarProducto" class="row g-3">
        <div class="col-md-6">
            <input type="text" id="title" class="form-control" placeholder="Título" required>
        </div>
        <div class="col-md-6">
            <input type="text" id="description" class="form-control" placeholder="Descripción" required>
        </div>
        <div class="col-md-6">
            <input type="number" id="price" class="form-control" placeholder="Precio" required>
        </div>
        <div class="col-md-6">
            <input type="text" id="img" class="form-control" value="sin-imagen" placeholder="URL de la imagen">
        </div>
        <div class="col-md-6">
            <input type="text" id="code" class="form-control" placeholder="Código" required>
        </div>
        <div class="col-md-6">
            <input type="number" id="stock" class="form-control" placeholder="Stock" required>
        </div>
        <div class="col-12">
            <button type="button" id="btnAgregarProducto" class="btn btn-primary w-100">Agregar Producto</button>
        </div>
    </form>
</section>

<script src="https://cdn.socket.io/4.7.4/socket.io.min.js"></script>
<script src="js/index.js"></script>